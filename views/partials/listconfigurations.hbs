<header class="ui header">
  {{user.firstName}}
  {{user.lastName}}'s configuration list
</header>

{{#each configurations}}
  <section class="ui segment">
    <h2 class="ui header">{{name}}</h2>
    <div class="ui divider"></div>
    <div class="ui horizontal list">
        <div class="item">
          <img class="ui avatar image" src="/icons/usericon.png">
          <div class="content">
            <div class="header">Playback Name</div>
              {{settings.0.name}}
          </div>
        </div>
        <div class="item">
          <img class="ui avatar image" src="icons/timetoicon.png">
          <div class="content">
            <div class="header">Schedule From</div>
              {{settings.0.starttime}}
          </div>
        </div>
        <div class="item">
          <img class="ui avatar image" src="/icons/timefromicon.png">
          <div class="content">
            <div class="header">Schedule To</div>
              {{settings.0.endtime}}
          </div>
        </div>
        <div class="item">
          <img class="ui avatar image" src="/icons/infoicon.png">
          <div class="content">
            <div class="header">Playback Information</div>
              {{settings.0.info}}
          </div>
        </div>
    </div>
    <div class="ui divider"></div>
    {{#unless settings.0.info}}
      <a href="/configuration/{{id}}" class="ui icon button"> <i class="folder icon"></i> </a>
    {{/unless}}
    <a href="/dashboard/deleteconfiguration/{{id}}" class="ui icon button">
      <i class="icon trash"></i></a>
  </section>
{{/each}}
{{addconfiguration}}